<div class="recipe-list" data-search-target="list">
  <% if @recipes.empty? %>
    <p>No results match this search</p>
  <% end %>
  <% @recipes.each do |recipe|%>
    <%= link_to recipe_path(recipe), class: "recipe-link" do %>
    <hr />
    <div class="alignment-container mb-0 mt-2">
      <div class="mr-2">
        <h5 class=""><%= recipe.name %></h5>
        <p class="m-0"><%= recipe.user.name %></p>
      </div>
        <p class="p-1"><%= recipe.country %></p>
    </div>
    <div class="mb-1 mt-2 mr-1 text-end">
    </div>
    <% end %>
  <% end %>
</div>
