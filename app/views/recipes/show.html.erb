<h1 class="text-center mt-3">Ancient Recipes</h1>

<div class="container">
  <div class="row mt-3">
    <div class="col-6">
        <div class="centerbar">
            <form action="/recipes" method="get">
            <select multiple name="ingredients[]" data-controller="select2">
                  <% Ingredient.all.each do |ing|  %>
                    <option value="<%= ing.id %>"><%= ing.name.capitalize %></option>
                  <% end %>
            </select>
              <button type="submit" class="btn btn-primary">âœ‹</button>
            </form>
        </div>
      <div class="recipe-list mt-1">
        <% if @recipes.empty? %>
          <p>No results match this search</p>
        <% end %>
        <% @recipes.each do |recipe|%>
          <%= link_to recipe_path(recipe), class: "recipe-link" do %>
          <hr />
          <div class="alignment-container mb-1 mt-2">
            <div class="my-auto">
              <h5><%= recipe.name %></h5>
              <p class="m-0"><%= recipe.user.name %></p>
            </div>
              <p class="m-0"><%= recipe.country %></p>
          </div>
          <div class="mb-1 mt-2 text-end">
          </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-lg-6">
      <h3 class="recipe-prep">Preparation: </h3>
    </div>
  </div>
  <%# Row for content %>
  <div class="row">
    <div class="col-3 recipe-information">
      <p class="recipe-prep-time">Preptime: <%= @recipe.prep_time %></p>
      <p class="recipe-era">Era: <%= @recipe.era %></p>
      <p class="recipe-country">Country: <%= @recipe.country %></p>
      <p class="recipe-rating">Rating: <% @recipe.rating.to_i.times do  %>
        <i class="fas fa-carrot"></i>
      <% end %>
      <% @blank_stars.times do %>
        <i id="empty-carrot" class="fas fa-carrot empty"></i>
      <% end %>
      </p>
      <p class="recipe-rate">Rate this recipe (LINK)</p>
      <p class="recipe-add-cookbook">Add to your cookbook (LINK)</p>
      <br>--- Picture of tasty old food ---
      <p class="recipe-image"><%= @recipe.image %></p>
    </div>

    <div class="col-3 recipe-ingredients">
      <p class="recipe-rating"><% @recipe.ingredients.each do |x| %>
        <li><%= x.name  %></li>
      <% end %></p>
    </div>

    <div class="col-6 recipe-preparation">
      <%= @recipe.instructions %>

      <!--MAP -->
      <div id="map" style="height: 300px; width: 600px" data-controller="mapbox" data-action="click->mapbox#map"></div>
      </div>
      <!--map-end-->
    <div class="col-6 ml-3">
      <%= render 'recipes/show_recipe' %>
    </div>
  </div>
