<div class="container-fluid">
  <div class="row mt-0">
    <div class="col-5" data-controller="search">
        <div class="centerbar">
            <form action="/recipes" method="get">
            <select multiple name="ingredients[]" data-controller="select2" data-search-target="input">
                  <% Ingredient.all.each do |ing|  %>
                    <option value="<%= ing.id %>"><%= ing.name.capitalize %></option>
                  <% end %>
            </select>
            </form>
        </div>
        <%=render "recipe_list" %>
      <div class="recipe-list mt-1">
        <% if @recipes.empty? %>
          <p>No results match this search</p>
        <% end %>
        <% @recipes.each do |recipe|%>
          <%= link_to recipe_path(recipe), class: "recipe-link" do %>
          <hr />
          <div class="alignment-container mb-1 mt-2">
            <div class="my-auto">
              <h5><%= recipe.name %></h5>
              <p class="m-0"><%= recipe.user.name %></p>
            </div>
              <p class="m-0"><%= recipe.country %></p>
          </div>
          <div class="mb-1 mt-2 text-end">
          </div>
          <% end %>
        <% end %>
         <!--printing window-->
      <button onclick="window.print()" class="print justify-content-end">Print this page</button>
      <!--printing window end-->
      </div>
    </div>

    <%# <div class="background-rectangle">
    </div> %>
    <div class="col-lg-7 recipe-container">
      <%= render "show_recipe" %>

    </div>

  </div>
  <%# Row for content %>

  </div>
