<h1 class="text-center mt-3">Our Recipes</h1>

<div class="container">
  <div class="row mt-4">
    <div class="class col-6 border">
      <div class="class banner bg-white" style="height:300px">
        <h1 class="text-center">BANNER WITH BUTTONS/SEARCH BAR</h1>
      </div>
      <div class="recipe-list mt-3">
        <% @recipes.each do |recipe|%>
          <%= link_to recipe_path(recipe), class: "recipe-link" do %>
          <hr />
          <div class="mb-1 mt-2 text-center">
            <%= recipe.name %>
          </div>
          <div class="mb-1 mt-2">
            <%= recipe.era %>
          </div>
          <div class="mb-1 mt-2">
            <%= recipe.country %>
          </div>
          <div>
            <%= recipe.instructions %>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>
      <div class="class col-6 ml-3">
        <img src="https://upload.wikimedia.org/wikipedia/commons/5/58/World_blank_map.png" alt="vertical photo" style="width:100%; height: 700px; object-fit: cover; position: sticky; top: 20px;">
      </div>
  </div>
</div>
