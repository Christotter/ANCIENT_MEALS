<div class="container-recipe-info">
  <%# Row for recipe title %>
  <div class="row">
    <div class="col-lg-12">
      <h1 class="recipe-name text-center"><%= @recipe.name %></h1>
    </div>
  </div>
  <%# Row for column categories %>
  <div class="row">
    <div class="col-lg-6 recipe-information">
      <p class="recipe-by">By <%= @recipe.user.name %></p>
      <p class="recipe-prep-time">Preptime: <%= @recipe.prep_time %></p>
      <p class="recipe-era">Era: <%= @recipe.era %></p>
      <p class="recipe-country">Country: <%= @recipe.country %></p>
      <p class="recipe-rating">Rating: <% @recipe.rating.to_i.times do  %>
        <i class="fas fa-carrot"></i>
      <% end %>
      <% @blank_stars.times do %>
        <i id="empty-carrot" class="fas fa-carrot empty"></i>
      <% end %>
      </p>
      <p class="recipe-rate">Rate this recipe (LINK)</p>
      <p class="recipe-add-cookbook">Add to your cookbook (LINK)</p>
      <p class="recipe-image"><%= cl_image_tag @recipe.image.key %></p>
    </div>
    <div class="col-lg-6 recipe-ingredients">
      <h3 class="recipe-ingredients">Ingredients: </h3>
       <p class="recipe-rating"><% @recipe.ingredients.each do |x| %>
        <li><%= x.name.capitalize  %></li>
      <% end %></p>
    </div>
    <div class="col-lg-12">
      <h3 class="recipe-prep">Preparation: </h3>
      <%= @recipe.instructions %>

    </div>
  </div>
  <%# Row for content %>
  <div class="row">
    <div class="col-3 ">

    </div>

    <div class="col-3 recipe-ingredients">

    </div>

    <div class="col-6 recipe-preparation">
    </div>

    <div id="map" style="height: 300px; width: 600px" data-controller="mapbox" data-action="click->mapbox#map"></div>
  </div>
</div>
