<div class="container-recipe-info container-fluid">
  <%# Row for recipe title %>
  <div class="row">
    <div class="col-lg-12">
      <h1 class="recipe-name"><%= @recipe.name %></h1>
    </div>
  </div>
  <%# Row for column categories %>
  <div class="row">

    <!--Buttons ...Lali-->
    <div class="m-3">

      <!--printing window-->
      <button onclick="window.print()" class="print">Print this page</button>
      <!--printing window end-->
    </div>
    <!--Buttons end-->


    <p class="recipe-by">By <%= @recipe.user.name %></p>
    <div class="col-lg-6 recipe-information">

      <p class="recipe-prep-time"><strong>Preptime</strong> <%= @recipe.prep_time %></p>
      <p class="recipe-era"><strong>Era</strong> <%= @recipe.era %></p>
      <p class="recipe-country"><strong>Country</strong> <%= @recipe.country %></p>

      <div class="recipe-rate"><%= render "rate" %></div>
      <p class="recipe-add-cookbook"><strong><%= render "add_to_cookbook" %></strong></p>
      <div class="recipe-image">
        <% if @recipe.photo.attached? %>
            <p class="recipe-image"><%= cl_image_tag @recipe.photo.key, class: "img-food" %></p>
        <% else %>
            <%# <img class="recipe-image" src="http://res.cloudinary.com/dspxgnggq/image/upload/v1/development/ob2a4mn5xf2jfbtq0p56d8ewewbt" alt="Food"> %>
            <img class="recipe-image" src="https://res.cloudinary.com/dspxgnggq/image/upload/v1646321626/development/dragne-marius-EdzsUFqHbaY-unsplash_1_xcg5mc.jpg" alt="Food">
        <% end %>
      </div>
    </div>


    <div class="col-lg-6 recipe-ingredients">
      <h4 class="recipe-ingredients">Ingredients</h4>
      <p class="recipe-ingredients-list"><% @recipe.recipes_ingredients.each do |recipe_ingredient| %>
        <li><%= recipe_ingredient.ingredient.name.capitalize  %> | <%= recipe_ingredient.quantity %></li>
      <% end %></p>

    </div>
    <div class="col-lg-12 recipe-prep">
      <h3>Preparation: </h3>
      <p><%= @recipe.instructions %></p>
    </div>
  </div>
  <%# Row for content %>
  <br>

  <div class="row">
    <%# <div class="adjusting-padding-h3"> %>
    <div class="recipe-origin">
      <h3>Origin: </h3>
    </div>
    </div>

      <%# MAP %>
      <div class="container-map-centering">
        <div id="map" style="height: 300px; width: 600px" class="map-centering"
        data-mapbox-longitude-value="<%=@recipe.longitude %>"
        data-mapbox-latitude-value="<%=@recipe.latitude %>"
        data-mapbox-code-value="<%=@recipe.country_code %>"
        data-controller="mapbox" data-action="click->mapbox#map"></div>
        </div>
      </div>
      <%# map-end %>
      </div>



</div>
